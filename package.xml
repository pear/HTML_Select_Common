<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../package.dtd">

<package>
	<name>HTML_Select</name>
	<summary>Some small classes to handle common &lt;select&gt; lists</summary>
	<description>
Provides &lt;select&gt;lists for:
o Country
o UK counties
o US States
o FR Departements
	</description>

	<maintainers>
		<maintainer>
			<user>richard</user>
			<name>Richard Heyes</name>
			<email>richard@php.net</email>
			<role>lead</role>
		</maintainer>
	</maintainers>

	<release>
		<license>BSD</license>
		<version>1.1</version>
		<date>2003-01-18</date>
		<state>stable</state>
		<notes>Updated package name, structure, and added French departements</notes>

		<filelist>
			<dir name="/" baseinstalldir="HTML">
				<dir name="Select">
					<dir name="Common">
						<file role="php" name="Country.php" />
						<file role="php" name="UKCounty.php" />
						<file role="php" name="USState.php" />
						<file role="php" name="FRDepartements.php" />
		
						<dir name="examples">
							<file role="php" name="Country.php" />
							<file role="php" name="UKCounty.php" />
							<file role="php" name="USState.php" />
							<file role="php" name="FRDepartements.php" />
						</dir>
					</dir>
				</dir>
			</dir>
		</filelist>

		<deps>
			<dep type="pkg" rel="ge" version="0.8">I18N</dep>
		</deps>

	</release>
	
	<changelog>
		<release>
			<license>BSD</license>
			<version>1.0</version>
			<date>2002-10-25</date>
			<state>stable</state>
			<notes>Initial release</notes>
		</release>
	</changelog>
</package>
