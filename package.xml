<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE package SYSTEM "../package.dtd">

<package>
	<name>HTML_Select</name>
	<summary>Some small classes to handle common &lt;select&gt; lists</summary>
	<description>
Provides &lt;select&gt;lists for:
o Country
o UK counties
o US States
	</description>

	<maintainers>
		<maintainer>
			<user>richard</user>
			<name>Richard Heyes</name>
			<email>richard@php.net</email>
			<role>lead</role>
		</maintainer>
	</maintainers>

	<release>
		<license>BSD</license>
		<version>1.0</version>
		<date>2002-10-25</date>
		<state>stable</state>
		<notes>
Initial release
		</notes>
		<filelist>
			<dir name="/" baseinstalldir="I18N/Select">
				<file role="php" name="Country.php" />
				<file role="php" name="UKCounties.php" />
				<file role="php" name="USStates.php" />

				<dir name="examples">
					<file role="php" name="Country.php" />
					<file role="php" name="UKCounties.php" />
					<file role="php" name="USStates.php" />
				</dir>
			</dir>
		</filelist>

		<deps>
			<dep type="pkg" rel="ge" version="0.8">I18N</dep>
		</deps>

	</release>

</package>
